<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roommate_ma"
    android:padding="20dp"
    tools:context=".profile.ui.ProfileSetupEActivity">

    <!-- 카드형 컨테이너 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- 상단 바 -->
                <LinearLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="Back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"/>


                </LinearLayout>

                <!-- Step Indicator -->
                <TextView
                    android:id="@+id/textStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 5 of 5"
                    android:textColor="#7D7D7D"
                    android:textSize="14sp"
                    android:layout_gravity="end" />
                <!-- 타이틀 -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduce Yourself"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Message (Optional)"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <!-- 상태메시지 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <!-- 예시 문구 (입력창) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hi! I have a fancy room!">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="3"
                            android:maxLines="5"
                            android:gravity="top"
                            android:hint=""/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 안내 문구 -->
                    <TextView
                        android:id="@+id/statusHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Write a short message that will appear on your profile."
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:paddingStart="4dp"/>
                </LinearLayout>


                <!-- 자기소개 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Self-Introduction*"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tell potential roommates about yourself, your habits, and lifestyle.">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputIntro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:maxLines="5"
                        android:gravity="top"
                        android:hint=""/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 완료 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Complete Profile"
                    android:backgroundTint="#5C3A00"
                    android:textColor="@android:color/white"

                    app:iconTint="@android:color/white"
                    app:iconGravity="textStart"
                    app:cornerRadius="8dp"/>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

