<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roommate_ma"
    android:padding="20dp"
    tools:context=".profile.ui.ProfileSetupDActivity">

    <!-- 상단 바 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/textStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4 of 5"
            android:textColor="#7D7D7D"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

    <!-- 카드 영역 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- 타이틀 -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lifestyle and Matching Preferences"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <!-- 기상 / 취침 시간 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wake-up Time">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputWakeup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g., 7:00 AM" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Bedtime">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputBedtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g., 12:00 AM" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 소음 수용도 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noise Tolerance Level"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp" />

                <RadioGroup
                    android:id="@+id/radioNoiseLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/radioQuiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quiet"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/radioModerate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moderate"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/radioNoisy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noisy" />
                </RadioGroup>

                <!-- 방문객 허용 여부 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Allow guests?"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switchGuests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- 요리 선호도 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cooking Frequency"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp" />

                <RadioGroup
                    android:id="@+id/radioCooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/radioCookOften"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Often"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/radioCookSometimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sometimes"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/radioNeverCook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rarely" />
                </RadioGroup>

                <!-- 버튼 영역 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="32dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrevious"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Back"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Next →"
                        android:backgroundTint="#5C3A00"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
