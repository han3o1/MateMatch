<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roommate_ma"
    android:padding="16dp"
    tools:context=".profile.ui.ProfileSetupCActivity">

    <!-- 카드형 컨테이너 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- 상단 바 -->
                <LinearLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="Back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Step Indicator -->
                <TextView
                    android:id="@+id/textStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 3 of 5"
                    android:textColor="#7D7D7D"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"/>

                <!-- 제목 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Lifestyle"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"/>

                <!-- 설명 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tell us about your daily habits and preferences"
                    android:textSize="14sp"
                    android:textColor="#7D7D7D"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"/>

                <!-- Lifestyle 항목 Grid -->
                <GridLayout
                    android:id="@+id/gridIdealRoommate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:useDefaultMargins="true"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="4dp">

                    <!-- Sleep Schedule -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep Schedule*"
                            android:textColor="#000000"
                            android:textSize="14sp"/>

                        <Spinner
                            android:id="@+id/spinnerSleep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/select_sleep" />
                    </LinearLayout>

                    <!-- Smoking -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smoking*"
                            android:textColor="#000000"
                            android:textSize="14sp"/>

                        <Spinner
                            android:id="@+id/spinnerSmoking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/select_smoking" />
                    </LinearLayout>

                    <!-- Pets -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pets*"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerPets"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/select_pets" />
                    </LinearLayout>

                    <!-- Cleanliness -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cleanliness*"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerClean"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/select_clean" />
                    </LinearLayout>

                    <!-- Guest Policy -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guest Policy*"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerGuests"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/select_guest" />
                    </LinearLayout>

                    <!-- Social Preference -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social Preference*"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerSocial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/select_social" />
                    </LinearLayout>
                </GridLayout>

                <!-- Next 버튼 -->
                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next →"
                    android:backgroundTint="#5C3A00"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="24dp"/>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
