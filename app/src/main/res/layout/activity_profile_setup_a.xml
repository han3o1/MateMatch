<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".profile.ui.ProfileSetupActivity">



    <!-- 카드형 컨테이너 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- 상단 바 -->
                <LinearLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="Back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"/>


                </LinearLayout>

                <!-- Step Indicator -->
                <TextView
                    android:id="@+id/textStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 1 of 5"
                    android:textColor="#7D7D7D"
                    android:textSize="14sp"
                    android:layout_gravity="end" />

                <!-- Title -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#000000"/>

                <!-- Profile Image -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_person_ex"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.None"

                    app:strokeColor="#CCCCCC"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="12dp" />

                <!-- Upload Photo Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUploadPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Photo"
                    android:icon="@drawable/ic_upload"
                    app:iconPadding="8dp"
                    android:iconTint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#5C3A00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JPG, PNG or GIF (Max 5MB)"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp"/>

                <!-- Full Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:layout_marginTop="24dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Age & Gender -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="12dp">

                    <Spinner
                        android:id="@+id/spinnerAge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:prompt="@string/select_age"/>

                    <Spinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:prompt="@string/select_gender"/>
                </LinearLayout>

                <!-- Occupation & MBTI -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="12dp">

                    <Spinner
                        android:id="@+id/spinnerOccupation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:prompt="@string/select_occupation"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="MBTI (Optional)"
                        android:layout_marginStart="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputMbti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g., INFP"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Move-in Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Available Move-in Date">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputMoveInDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Next Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next →"
                    android:backgroundTint="#5C3A00"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="24dp"/>

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
