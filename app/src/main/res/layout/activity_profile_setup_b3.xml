<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roommate_ma"
    android:padding="20dp"
    tools:context=".profile.ui.ProfileSetupBActivity">

    <!-- 상단 바 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/textStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2 of 5"
            android:textColor="#7D7D7D"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

    <!-- 카드 영역 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- 타이틀 -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Find Your Prefect Home"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- City & District -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- City Spinner -->
                    <Spinner
                        android:id="@+id/spinnerCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/cities"
                        android:prompt="@string/select_city" />

                    <!-- District Spinner -->
                    <Spinner
                        android:id="@+id/spinnerDistrict"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:entries="@array/districts"
                        android:prompt="@string/select_district" />
                </LinearLayout>


                <!-- 건물 유형 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Building Type"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"/>

                <LinearLayout
                    android:id="@+id/layoutBuildingType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

                            android:tag="Officetel"
                            android:text="Officetel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:strokeColor="#5C3A00"
                            app:iconTint="#5C3A00" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:tag="Apartment"
                            android:text="Apartment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:strokeColor="#5C3A00"
                            app:iconTint="#5C3A00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:tag="Studio"
                            android:text="Studio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:strokeColor="#5C3A00"
                            app:iconTint="#5C3A00" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:tag="Villa/2BR"
                            android:text="Villa/2BR"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:strokeColor="#5C3A00"
                            app:iconTint="#5C3A00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:tag="House"
                            android:text="House"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:strokeColor="#5C3A00"
                            app:iconTint="#5C3A00" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:tag="Office"
                            android:text="Office"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:strokeColor="#5C3A00"
                            app:iconTint="#5C3A00" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 월세 / 관리비 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="24dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Monthly Rent (₩)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputRent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g., 800" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:hint="Maintenance Fee (₩)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g., 100" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- 옵션 체크박스 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amenities and Features"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginTop="8dp">

                    <CheckBox android:text="WiFi" />
                    <CheckBox android:text="Washer/Dryer" />
                    <CheckBox android:text="Parking" />
                    <CheckBox android:text="Gym" />
                    <CheckBox android:text="Pool" />
                    <CheckBox android:text="Air Conditioning" />
                    <CheckBox android:text="Heating" />
                    <CheckBox android:text="Dishwasher" />
                </GridLayout>

                <!-- Next 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next →"
                    android:backgroundTint="#5C3A00"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="32dp"/>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
