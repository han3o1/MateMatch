<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/brown_50">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_chat_empty"
        app:tint="@color/brown_500" />

    <TextView
        android:layout_marginTop="12dp"
        android:text="No conversations yet"
        android:textColor="@color/brown_500"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <TextView
        android:layout_marginTop="4dp"
        android:text="Start messaging people you like to begin a conversation"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
